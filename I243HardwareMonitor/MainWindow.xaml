<Window x:Class="I243HardwareMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I243HardwareMonitor"
        mc:Ignorable="d"
        Title="Hardware Monitor" Height="350" Width="525">
    
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Exit" Click="File_Exit_Click"/>
                </MenuItem>
                <MenuItem Header="_Help">
                </MenuItem>

            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
        <TextBox x:Name="txtbOutput" HorizontalAlignment="Left" Height="122" Margin="19,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_Start" Content="Monitor" HorizontalAlignment="Left" Margin="420,30,0,0" VerticalAlignment="Top" Width="75" Click="btn_Start_Click"/>
        

    </Grid>
</Window>
