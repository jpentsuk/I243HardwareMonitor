<Window x:Class="I243HardwareMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I243HardwareMonitor"
        mc:Ignorable="d"
        Title="Hardware Monitor" Height="600" Width="500">
    <!-- Added window opening animation. Source: https://stackoverflow.com/questions/754739/how-to-animate-a-window -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard Duration="00:00:3" Storyboard.TargetProperty="Opacity">
                    <DoubleAnimation From="0" To="1"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <TabControl>
        <TabItem Header="General">
			<Grid>
				
				<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
					<StackPanel Name="mainViewStackPanel" Orientation="Vertical"></StackPanel>
				</ScrollViewer>
				<Button Name="btn_Help" Content="?" Margin="25, 5" Click="btn_Help_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Height="30" Width="30"/>
			</Grid>
        </TabItem>
        <TabItem Header="Database">

        </TabItem>

        <TabItem Header="Preferences">
            <StackPanel Name="stc_preferences">
                <CheckBox Name="chc_cpu" Content="Show CPU" IsChecked="True" Click="chc_viewToggle_Changed"/>
                <CheckBox Name="chc_gpu" Content="Show GPU" IsChecked="True" Click="chc_viewToggle_Changed"/>
                <CheckBox Name="chc_ram" Content="Show RAM" IsChecked="True" Click="chc_viewToggle_Changed"/>
                <CheckBox Name="chc_hdd" Content="Show HDD" IsChecked="True" Click="chc_viewToggle_Changed"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
