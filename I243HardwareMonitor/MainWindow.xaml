<Window x:Class="I243HardwareMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I243HardwareMonitor"
        mc:Ignorable="d"
        Title="Hardware Monitor" Height="475" Width="500">
    <!-- Added window opening animation. Source: https://stackoverflow.com/questions/754739/how-to-animate-a-window -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard Duration="00:00:3" Storyboard.TargetProperty="Opacity">
                    <DoubleAnimation From="0" To="1"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <TabControl>
        <TabItem Header="General">
			<Grid>
				<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0, 30, 0, 0">
					<StackPanel Name="mainViewStackPanel" Orientation="Vertical"></StackPanel>
				</ScrollViewer>
				<Button Name="btn_Help" Content="?" Margin="5, 5" Click="btn_Help_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Height="30" Width="30"/>
			</Grid>
        </TabItem>
        <TabItem Header="Database">

        </TabItem>

        <TabItem Header="Preferences">
	        <Border Name="brd_main_view" BorderThickness="1" BorderBrush="Gray" CornerRadius="5" HorizontalAlignment="Stretch" Height="100" VerticalAlignment="Top" Margin="5, 5, 5, 0">
				<StackPanel Name="stc_preferences">
					<Label Content="General view components: "></Label>
					<CheckBox Margin="5, 1, 5, 0" Name="chc_cpu" Content="Show CPU" IsChecked="True" Click="chc_viewToggle_Changed"/>
					<CheckBox Margin="5, 1, 5, 0" Name="chc_gpu" Content="Show GPU" IsChecked="True" Click="chc_viewToggle_Changed"/>
					<CheckBox Margin="5, 1, 5, 0" Name="chc_ram" Content="Show RAM" IsChecked="True" Click="chc_viewToggle_Changed"/>
					<CheckBox Margin="5, 1, 5, 0" Name="chc_hdd" Content="Show HDD" IsChecked="True" Click="chc_viewToggle_Changed"/>
				</StackPanel>
			</Border>
		</TabItem>
    </TabControl>
</Window>
