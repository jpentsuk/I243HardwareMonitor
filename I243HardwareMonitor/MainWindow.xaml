<Window x:Class="I243HardwareMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I243HardwareMonitor"
        mc:Ignorable="d"
        Title="Hardware Monitor" Height="350" Width="525">

    
        <TabControl>
        <TabItem Header="General">
            <Grid>
                <Label Name="lbl_cpu" Content="CPU" Margin="1,55,0,0"/>
                <Label Name="lbl_gpu" Content="GPU" Margin="1,160,0,0"/>
                <Button Name="btn_Help" Content="?" Margin="476,2,0,261" Click="btn_Help_Click"/>
                <StackPanel Name="stc_cpu" Margin="30,20,0,0"></StackPanel>
                <StackPanel Name="stc_gpu" Margin="30,120,0,0"></StackPanel>
                
            </Grid>
        </TabItem>
        <TabItem Header="Database">
            
        </TabItem> 

        <TabItem Header="Preferences">
            <StackPanel Name="stc_preferences">
                <CheckBox Name="chc_cpu" Content="Show CPU" Checked="chc_cpu_Checked" Unchecked="chc_cpu_Unchecked" IsChecked="False"/>
                <CheckBox Name="chc_gpu" Content="Show GPU" IsChecked="False" Checked="chc_gpu_Checked" Unchecked="chc_gpu_Unchecked"></CheckBox>
            </StackPanel>
        </TabItem>

    </TabControl>




</Window>
