<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:local="clr-namespace:I243HardwareMonitor"
                    x:Class="I234HardwareMonitor.NotifyIconViewModel">

    <ContextMenu x:Shared="false" x:Key="SysTrayMenu">
        <MenuItem Header="Ava Suur Aken" Command="{Binding ShowWindowCommand}"/>
        <MenuItem Header="Peida Suur Aken" Command="{Binding HideWindowCommand}"/>
        <Separator/>
        <MenuItem Header="Välju" Command="{Binding ExitProgramCommand}"/>
    </ContextMenu>

    <tb:TaskbarIcon x:Key="NotifyIcon"
                    IconSource="/Resources/fan.ico"
                    ToolTipText="Hardware Monitor"
                    DoubleClickCommand="{Binding ShowWindowCommand}"
                    ContextMenu="{StaticResource SysTrayMenu}">
        <tb:TaskbarIcon.DataContext>
            <local:NotifyIconViewModel/>
        </tb:TaskbarIcon.DataContext>
    </tb:TaskbarIcon>

</ResourceDictionary>